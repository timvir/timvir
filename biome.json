{
  "files": {
    "ignore": [".direnv", ".next", "node_modules"]
  },

  "formatter": {
    "enabled": false
  },

  "organizeImports": {
    "enabled": false
  },

  "linter": {
    "rules": {
      "style": {
        "useSelfClosingElements": "off",
        "noNonNullAssertion": "off",
        "useImportType": "off",
        "noUselessElse": "off"
      },
      "correctness": {
        "useJsxKeyInIterable": "off",
        "useExhaustiveDependencies": "off"
      },
      "security": {
        "noGlobalEval": "off",
        "noDangerouslySetInnerHtml": "off"
      },
      "suspicious": {
        "noArrayIndexKey": "off",
        "noExplicitAny": "off"
      },
      "complexity": {
        "useOptionalChain": "off",
        "useRegexLiterals": "off"
      },
      "a11y": {
        "useButtonType": "off",
        "noBlankTarget": "off",
        "useFocusableInteractive": "off",
        "useIframeTitle": "off",
        "useSemanticElements": "off",
        "noAutofocus": "off",
        "useKeyWithClickEvents": "off",
        "noSvgWithoutTitle": "off",
        "useGenericFontNames": "off",
        "useValidAnchor": "off",
        "useAltText": "off"
      }
    }
  }
}
